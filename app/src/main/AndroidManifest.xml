<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.washington.cpolyukh.quizdroid" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TopicActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizActivity"
            android:label="@string/title_activity_quiz" >
        </activity>
        <activity
            android:name=".TopicOverviewFragment"
            android:label="@string/title_activity_topic_overview_fragment" >
        </activity>
        <activity
            android:name=".QuestionFragment"
            android:label="@string/title_activity_question_fragment" >
        </activity>
        <activity
            android:name=".AnswerFragment"
            android:label="@string/title_activity_answer_fragment" >
        </activity>
    </application>

</manifest>
